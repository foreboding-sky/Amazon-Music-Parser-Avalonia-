<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaTestingApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTestingApp.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaTestingApp">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Grid ColumnDefinitions="*,8*,*">
		<StackPanel Grid.Column="1">
			<Button Command="{Binding GetPlaylist}">Get playlist</Button>
			<Grid ColumnDefinitions="200, *">
				<Grid Grid.Column="1" RowDefinitions="2*, 4*" Height="200">
					<TextBlock Grid.Row="0" Text="{Binding Playlist.Name}" />
					<TextBlock Grid.Row="1" Text="{Binding Playlist.Description}"/>
				</Grid>
				<Image Grid.Column="0" Source="{Binding Playlist.Image}" Height="200" Width="200"/>
			</Grid>
		</StackPanel>
	</Grid>
</Window>
